<header id="header">
    <h1>Shelters</h1>
</header>

<div class="header-link">
  <%= link_to 'Back To Home', "/" %>
  <%= link_to 'Go to Pets', "/pets" %>
</div>
<%= link_to "New Shelter", "/shelters/new" %><br>




  <% @shelters.each do |shelter| %>
  <h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>

  <p>Address: <%= shelter.address %></p>
  <p>City: <%= shelter.city %></p>
  <p>State: <%= shelter.state %></p>
  <p>Zip: <%= shelter.zip %></p>

  <%= link_to 'Pets', "/shelters/#{shelter.id}/pets" %><br>
  <%= link_to 'Update Shelter', "/shelters/#{shelter.id}/edit" %><br>
  <form action="/shelters/<%= shelter.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" name="Delete Shelter" value="Delete Shelter"/>
  </form>

  <% end %>
