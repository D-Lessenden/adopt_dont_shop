<% @pets.each do |pet| %>
  <% if session[:favorite].include?("#{pet.id}")%>
  <ul><%= link_to "#{pet.name}",  "/pets/#{pet.id}"%></ul>
  <ul><%= image_tag("/pets/#{pet.image}", :size => "200x100")%></ul>
  <%= check_box "pet", nil, {:multiple => false}, pet.id, nil %>
  <%= label_tag pet.name %>
  <% end %>
<% end  %>

<%= form_tag "/apps/new" do %>
  <%= label_tag 'Name' %><br/>
  <%= text_field_tag :name %><br/>

  <%= label_tag 'Address' %><br/>
  <%= text_field_tag :address %><br/>

  <%= label_tag 'City' %><br/>
  <%= text_field_tag :city %><br/>

  <%= label_tag 'State' %><br/>
  <%= text_field_tag :state %><br/>

  <%= label_tag 'Zip' %><br/>
  <%= text_field_tag :zip %><br/>

  <%= label_tag 'Phone Number' %><br/>
  <%= text_field_tag :phone_number %><br/>

  <%= label_tag 'Why is your home a good place?' %><br/>
  <%= text_field_tag :description %><br/>


  <%= submit_tag "Submit Application" %>

<% end %>
