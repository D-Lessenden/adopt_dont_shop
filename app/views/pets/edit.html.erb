
<form action="/pets/<%= @pet.id %>" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type="hidden" name="_method" value="PATCH" />
<p>Make Your Edits!</p>
<p>Image </p>
<input type='text' name='image' value="<%= @pet.image %>"/><br/>
<p>Name </p>
<input type='text' name='name' value="<%= @pet.name %>"/><br/>
<p>Description </p>
<textarea type='text' name='description' value="<%= @pet.description %>"/></textarea>
<p>Approximate age </p>
<input type='text' name='approximate_age' value="<%= @pet.approximate_age %>"/><br/>
<p>Sex</p>
<input type='text' name='sex' value="<%= @pet.sex %>"/><br/>
<p>Shelter </p>
<input type='text' name='shelter_id' value="<%= @pet.shelter_id %>"/><br/>


<input type='submit' name="Update Pet" value="Update Pet"/>
</form>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"><br>
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" name="Delete Pet" value="Delete Pet"/>
</form>
