<% if session[:favorite] == nil %>
  <%= "You have no favorited pets" %>
<% else %>
  <% @pets.each do |pet|%>
    <% if session[:favorite].include?("#{pet.id}")%>
    <ul><%= link_to "#{pet.name}",  "/pets/#{pet.id}"%></ul>
    <ul><%= image_tag("/pets/#{pet.image}", :size => "200x100")%></ul>
    <% end %>
  <% end  %>
<% end  %>
